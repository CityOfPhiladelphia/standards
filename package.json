{
  "name": "phila-standards",
  "version": "0.2.6",
  "description": "City of Philadelphia Standards",
  "main": "src/js/main.js",
  "repository": "https://github.com/CityOfPhiladelphia/standards.git",
  "author": "City of Philadelphia",
  "license": "GPL-3.0",
  "dependencies": {
    "font-awesome": "^4.7.0",
    "foundation-sites": "^6.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^13.3.0",
    "exorcist": "^0.4.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.3.0",
    "onchange": "^3.2.1",
    "parallelshell": "^2.0.0",
    "postcss": "^5.2.10",
    "postcss-cli": "^2.6.0",
    "rimraf": "^2.6.1",
    "watchify": "^3.8.0"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "setup": "mkdirp dist/js",
    "css:build": "node-sass --include-path node_modules/foundation-sites/scss --include-path node_modules/font-awesome/scss --output-style compressed --source-map true src/sass/main.scss dist/css/styles.css",
    "postcss:build": "postcss --use autoprefixer -b 'last 2 versions' -o dist/css/*.css dist/css/*.css",
    "css:watch": "onchange './src/sass/' -- yarn run css:build",
    "js:build": "browserify src/js/main.js --debug | exorcist dist/js/bundle.map.js > dist/js/bundle.js",
    "js:watch": "watchify src/js/main.js -o dist/js/bundle.js",
    "//": "TODO use a cross-platform command",
    "assets": "cp -R node_modules/font-awesome/fonts dist/ && cp -R src/img dist/",
    "build": "yarn run css:build && yarn run setup && yarn run js:build && yarn run assets",
    "prewatch": "yarn run build",
    "watch": "parallelshell 'yarn run css:watch' 'yarn run js:watch'",
    "start": "yarn run watch"
  }
}
