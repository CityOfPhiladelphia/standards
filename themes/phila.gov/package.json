{
  "name": "phl-digital-stanards",
  "version": "1.0.0",
  "description": "City of Philadelphia Digital Stanards",
  "main": "index.js",
  "repository": "https://github.com/CityOfPhiladelphia/standards.git",
  "author": "City of Philadelphia",
  "license": "GPL-3.0",
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "foundation": "^4.2.1-1",
    "foundation-sites": "^6.3.0",
    "node-sass": "^4.3.0",
    "onchange": "^3.2.1",
    "parallelshell": "^2.0.0",
    "postcss": "^5.2.10",
    "postcss-cli": "^2.6.0"
  },
  "scripts": {
    "hugo:b": "cd ../../ && hugo",
    "hugo:w": "cd ../../ && hugo server",
    "css:build": "node-sass --include-path node_modules/foundation-sites/scss --output-style compressed static-src/sass/_base.scss static/css/styles.css",
    "postcss:build": "postcss --use autoprefixer -b 'last 2 versions' static/css/*.css",
    "css:watch": "onchange './static-src/sass/' -- yarn run css:build",
    "build": "yarn run css:build",
    "prewatch": "yarn run build",
    "watch": "parallelshell 'yarn run css:watch' 'yarn run hugo:w'",
    "start": "yarn run watch"
  }
}
